#cloud-config
#vim:syntax=yaml

users:
  - default
  - name: vagrant
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    ssh-authorized-keys:
      - ssh-rsa  vagrant insecure public key

chpasswd:
  list: |
    root:vagrant
    ec2-user:vagrant
    vagrant:vagrant
  expire: False

write_files:
  - path: /etc/environment
    permissions: '0644'
    owner: root:root
    content: |
      LANG="ja_JP.UTF-8"
      LC_CTYPE="ja_JP.UTF-8"
  - path: /etc/cloud/cloud.cfg.d/80_disable_network_after_firstboot.cfg
    content: |
      # Disable network configuration after first boot
      network:
        config: disabled

locale: ja_JP.UTF-8
timezone: Asia/Tokyo


